{
  "$schema": "https://raw.githubusercontent.com/nicerdicer/tauri-v2-schema/main/schema.json",
  "productName": "spat.ai",
  "version": "0.1.0",
  "identifier": "com.spat-ai.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "companion",
        "title": "spat.ai",
        "width": 400,
        "height": 700,
        "resizable": true,
        "fullscreen": false
      },
      {
        "label": "overlay",
        "title": "TFT Overlay",
        "width": 300,
        "height": 200,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
